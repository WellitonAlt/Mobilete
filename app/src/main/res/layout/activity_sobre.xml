<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@mipmap/fundo_round"
        tools:context=".scenarios.sobre.SobreActivity">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            custom:civ_border_width="0dp"
            android:src="@drawable/logo_semborda"
            custom:civ_border_color="@android:color/white"/>

    <me.grantland.widget.AutofitTextView
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:id="@+id/txtSobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:singleLine="false"
            android:textStyle="bold"
            custom:minTextSize="20sp"
            android:background="@drawable/rounded_grey"
            android:text="@string/texto_sobre"/>

</LinearLayout>